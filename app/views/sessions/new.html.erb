
<% if notice.present? %>
<div class="alert alert-danger"><%= notice %></div>
<% end %>



<div class="col-md-3">

</div>



    <div class="col-md-6 sign-up-box">

      <div class="row">
        <h2 class="sign-up-head">Great to see you again.</h2>
        <h2 class="sign-up-head">Login and smash'em.</h2>
      </div>

        <div class="form-goup">
          <%= form_tag sessions_url do %>

              <h3><%= label_tag 'email', 'Email' %></h3>
              <%= text_field_tag 'email', nil, class: 'form-control sign-up' %>

              <h3><%= label_tag 'password', 'Password' %></h3>
              <%= password_field_tag 'password', nil, class: 'form-control sign-up' %>


              <%= submit_tag 'SMASH IT', class: 'form-control btn btn-default sign-up-button' %>
          <% end %>
        </div>

    </div>
