<div class="container">


<h1>SMASHED TASKS</h1>

<h3><%= link_to "Go back home", tasks_url %></h3>

<h4>Number of smashed tasks: <%= @archivedtasks.count %></h4>

<table class = "table table-bordered">

<tr>
<th>DONE?</th>
<th>TASK</th>
<th>OWNER</th>
<th>IMPORTANT</th>
</tr>


<%  @archivedtasks.each do |a| %>
<tr>
<td>DONE!</td>
<td><%= a.content %></td>
<td><%= a.owner %></td>
<td><%= a.important %></td>
</tr>

<% end %>

</table>

</div>
