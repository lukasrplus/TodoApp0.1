

<h2>SOMETHING NEW TO SMASH?</h2>

<%= form_tag tasks_url, method: 'post' do %>

<div class="form-group">
  <%= label_tag 'content', "New Task" %>
  <%= text_field_tag 'content', nil, placeholder: "Enter your new task here...", class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag 'owner', "Task Owner" %>
  <%= text_field_tag 'owner', nil, placeholder: "Who has to smash that task?", class: "form-control" %>
</div>


<div class="checkbox">
<label for = "important">IMPORTANT</label>
<input id = "important" type = "checkbox" name = "important">
</div>

<button type="submit" class="btn btn-default" id = "newtask">Add new task</button>


<% end %>



