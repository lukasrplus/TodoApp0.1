

<h2><%= @task.owner %>, update your task below.</h2>

<%= form_tag task_url(@task.id), method: 'patch' do %>

<div class="form-group">
<%= label_tag 'content', "Your Task" %>
<%= text_field_tag 'content', @task.content, class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag 'owner', "Task Owner" %>
  <%= text_field_tag 'owner', @task.owner, class: "form-control" %>
</div>

<div class="checkbox">
  <label for = "important">IMPORTANT</label>
    <% if @task.important  %>
      <input id = "important" type = "checkbox" name = "important" checked = "checked" >
    <% else %>
      <input id = "important" type = "checkbox" name = "important">
    <% end %>
</div>

<button type="submit" class="btn btn-default" id = "newtask">Update your task</button>

<% end %>




