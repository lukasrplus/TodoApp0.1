<div class="row">

  <div class="col-md-12">


      <table class = "table borderless" id = "task_table">

<!--       <tr>
      <th></th>
      <th id="task_content">TASK</th>
      <th>OWNER</th>
      <th>IMPORTANT</th>
      <th></th>
      <th></th>
