<div class="container">

<h1>MY TASKS FOR TODAY</h1>

<h3><%= link_to "Add new task", new_url %></h3>

<h3><%= link_to "ARCHIVE", archiveindex_url %></h3>

<h4>Number of open tasks: <%= @tasks.count %></h4>

<h4>Number of important tasks: <%= @count_important_tasks %></h4>



<table class = "table table-bordered">

<tr>
<th>DONE?</th>
<th>TASK</th>
<th>OWNER</th>
<th>IMPORTANT</th>
<th>DELETE</th>
<th>EDIT</th>
</tr>


<%  @tasks.each do |task| %>
<tr>
<td><%= link_to "done", archive_url(task.id) %></td>
<td><%= task.content %></td>
<td><%= task.owner %></td>
<td><%= task.important %></td>
<td><%= link_to "delete", destroy_url(task.id) %></td>
<td><%= link_to "edit", edit_url(task.id) %></td>
</tr>

<% end %>

</table>

</div>


