
<% if session[:u_id].present? %>


<script type="text/javascript">

$(document).ready(function() {
  $(".alert-info").fadeOut(5000, "linear");
});


</script>



<% if notice.present? %>
<div class="alert alert-info"><%= notice %></div>
<% end %>



<%= form_tag tasks_url, method: 'post', class: "form-inline" do %>

      <% user = User.find_by(id: session[:u_id]) %>
      <%= hidden_field_tag :user_id, user.id  %>



      <div class="form-group" id="task_input">
        <label class="sr-only" for="content"></label>
        <%= text_field_tag 'content', nil, placeholder: "#{user.username}, what do you want to smash today?", class: "form-control" %>
      </div>

    <div class="form-group">
      <div class="checkbox">
      <label for = "important">IMPORTANT</label>
      <input id = "important" type = "checkbox" name = "important">
      </div>
    </div>

    <button type="submit" class="btn btn-default">Add new task</button>





<% end %>







