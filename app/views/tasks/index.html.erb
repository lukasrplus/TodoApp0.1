<h1>MY TASKS FOR TODAY</h1>

<h3><%= link_to "Add new task", new_url %></h3>

<table border="1">

<tr>
<th>TASK</th>
<th>OWNER</th>
<th>DONE</th>
<th>IMPORTANT</th>
<th>DELETE</th>
<th>EDIT</th>
</tr>


<%  @tasks.each do |task| %>
<tr>
<td><%= task.content %></td>
<td><%= task.owner %></td>
<td><%= task.done %></td>
<td><%= task.important %></td>
<td><%= link_to "delete", destroy_url(task.id) %></td>
<td><%= link_to "edit", edit_url(task.id) %></td>
</tr>

<% end %>

</table>




