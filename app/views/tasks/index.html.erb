<div class="container">

<div class="row">
  <div class="col-md-4" id="headline_l"><h1>TASKSMASHR</h1></div>
  <div class="col-md-4 col-md-offset-4" id="headline_r"><h3><%= link_to "ADD NEW TASK", new_url %></h3></div>
</div>

<div class="row">
  <div class="col-md-4" id="headline_l"><h3><%= link_to "ARCHIVED TASKS", archiveindex_url %></h3></div>
</div>


<h4>Number of open tasks: <%= @tasks.count %></h4>

<h4>Number of important tasks: <%= @count_important_tasks %></h4>



<table class = "table table-bordered">

<tr>
<th>DONE?</th>
<th>TASK</th>
<th>OWNER</th>
<th>IMPORTANT</th>
<th>DELETE</th>
<th>EDIT</th>
</tr>


<%  @tasks.each do |task| %>
<tr>

<td><button type="button" class="btn btn-success"><%= link_to "DONE", archive_url(task.id) %></button></td>

<td><%= task.content %></td>

<td><%= task.owner %></td>

<td><%= task.important %></td>

<td><button type="button" class="btn btn-danger"><%= link_to "DELETE", destroy_url(task.id) %></button></td>


<td><button type="button" class="btn btn-info"><%= link_to "EDIT", edit_url(task.id) %></button></td>
</tr>

<% end %>

</table>

</div>


